<% include ../templates/navigation.ejs %>
<main>
    <div class="section no-pad-bot" id="index-banner">
        <div class="container">
            <br><br>
            <h1 class="header center <%= customColor1 %>-text">bStats</h1>
            <div class="row center">
                <h5 class="header col s12 light">Plugin Metrics made with ‚ù§</h5>
